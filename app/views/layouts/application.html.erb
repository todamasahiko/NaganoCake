<!DOCTYPE html>
<html>
  <head>
    <title class="text-success">NaganoCake</title>
     <%= link_to "123456789", new_admin_session_path ,id: "keys"%>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/5c442e0d91.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper" style="min-height: 100vh; position: relative;">
     <!-- headerの記述 -->
     <header>
      <div class="container">

        <nav class="nav navbar-nav navbar-left">
          <%= link_to root_path do %>
          <%= image_tag "logo.png" %>
          <% end %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if member_signed_in? %>
              <li><%= link_to ' マイページ', public_members_path %></li>
              <li><%= link_to ' 商品一覧', public_items_path %></li>
              <li><%= link_to ' カート', public_cart_items_path %></li>
              <li><%= link_to ' ログアウト', destroy_member_session_path, method: :delete %></li>
            <% elsif admin_signed_in?%>
              <li><%= link_to ' 商品一覧', admin_items_path %></li>
              <li><%= link_to ' 会員一覧', admin_members_path %></li>
              <li><%= link_to ' 注文履歴一覧', admin_orders_path %></li>
              <li><%= link_to ' ジャンル一覧', admin_genres_path %></li>
              <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete %></li>
              <li><input name="search" placeholder="search　🔍"></li>
            <% else %>
              <li><%= link_to ' 商品一覧', public_items_path %></li>
              <li><%= link_to ' アバウト', public_about_path %></li>
              <li><%= link_to ' 新規登録', new_member_registration_path %></li>
              <li><%= link_to ' ログイン', new_member_session_path %></li>
            <% end %>

          </ul> 
        </nav>

      </div>
    </header>

    <div>
      <%= yield %>

    <footer style="width: 100%; height: 80px; background-color: darkseagreen; bottom: 0; position: absolute;">
      <div class="icons" style="text-align:center; margin-top: 30px;">
        <i class="fab fa-instagram-square fa-lg"></i>
        <i class="fab fa-twitter-square fa-lg" style="margin:0 20px;"></i>
        <i class="fab fa-facebook-square fa-lg"></i>
      </div>
    </footer>
   </div>
  </body>
</html>