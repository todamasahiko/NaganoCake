<div class="container">
	<h2>配送先登録/一覧</h2>

    <%= form_for @address, url:public_addresses_path, method: :post do |f| %>
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :shipping_address, autofocus: true, autocomplete: "shipping_address" %>
      </div>
      <div class="field">
        <%= f.label :宛名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div><br>
      <div class="field">
      <%= f.submit "登録する", class:"btn btn-primary" %>
      </div>
      <% end %>

     <table  class="table table-bordered">
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.shipping_address %></td>
            <td><%= address.name %></td>
            <td>
                <!--id必要  edit_public_address_path-->
                <%= link_to "編集する", edit_public_address_path(address),method: :get , class: "btn btn-primary" %>　　<%= link_to "削除する", public_address_path(address), method: :delete , class: "btn btn-danger" %><!-- pathにid必要 public_address_path-->
            </td>
        </tr>
        <% end %>
      </table>
      <div class="col-xs-6 col-xs-offset-4 ">
          <%= paginate @addresses %>
      </div><!-- ページネーション用記載.コントローラに何項目ごとにページを分けるか記載 -->
</div>