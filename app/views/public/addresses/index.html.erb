<div class="container">
	<h2>配送先登録/一覧</h2>

    <%= form_for @address, url:public_addresses_path, method: :post do |f| %>
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :shipping_address, autofocus: true, autocomplete: "shipping_address" %>
      </div>
      <div class="field">
        <%= f.label :宛名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
      <%= f.submit "登録する", class:"btn btn-primary" %>
      </div>
      <% end %>

     <table  class="table table-bordered">
        <tr>
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
            <td></td>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
            <td><%= address.postal_code %></td>
            <th><%= address.shipping_address %></th>
            <th><%= address.name %></th>
            <th>
               <div style="display:inline-flex">
                <%=button_to "編集する", edit_public_address_path(address),method: :get , class: "btn btn-primary" %>
                <!--id必要  edit_public_address_path-->
                <%=button_to "削除する", public_address_path(address), method: :delete , class: "btn btn-danger" %>
                <!-- pathにid必要 public_address_path-->
               </div>
            </th>
        </tr>
        <% end %>
</div>