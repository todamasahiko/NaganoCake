<div class="container takasa">
  <h2><i class="fas fa-truck"></i>配送先住所編集</h2><br>
    <%= form_for @address, url:public_address_path(@address), method: :patch do |f| %>
      <div class="field address">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div><br>
      <div class="field address">
        <%= f.label :住所 %><br />
        <%= f.text_field :shipping_address, autofocus: true, autocomplete: "shipping_address" %>
      </div><br>
      <div class="field address">
        <%= f.label :宛名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div><br>
      <div class="field">
      <%= f.submit "編集する", class:"btn btn-primary" %>
      </div>
      <% end %>
</div>