<div class="container">
	<h2>注文履歴詳細</h2>
	<div class="row">
		<div class="col-xs-6">
			<p>注文情報</p>
			<table align="left" class="table table-bordered">
				<tr>
					<td>注文日</td>
					<th><%= @order.created_at %></th>
				</tr>
				<tr>
					<td>配送先</td>
					<th>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></th>
				</tr>
				<tr>
					<td>支払方法</td>
					<th><%= @order.payment_method %></th>
				</tr>
				<tr>
					<td>ステータス</td>
					<th><%= @order.order_status %></th>
				</tr>
			</table>
		
		
				<p>注文内容</p>
				<table class="table table-bordered">
					
					<tr>
						<td>商品</td>
						<td>単価（税込み）</td>
						<td>個数</td>
						<td>小計</td>
					</tr>
					<% @order_item.each do |order_item| %>
					<tr>
						<th><%= order_item.item.item_name %></th>
						<th><%= order_item.items_tax_included_price %></th>
						<th><%= order_item.number_of_items %></th>
						<th><%= (order_item.items_tax_included_price*order_item.number_of_items) %>
							<% @total += (order_item.items_tax_included_price*order_item.number_of_items) %>
						</th>
					</tr>
					<% end %>
				</table>
			</div>
			<div class="col-xs-6">
				<div class="row">
				  <p>請求情報</p>
				  <table class="table table-bordered">
					<tr>
						<td>商品合計</td>
						<th><%= @total %></th>
					</tr>
					<tr>
						<td>配送料</td>
						<th>800</th>
					</tr>
					<tr>
						<td>ご請求額</td>
						<th><%= @total + 800 %></th>
					</tr>
				  </table>
		        </div>
		</div>
	</div>
</div>