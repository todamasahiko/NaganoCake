<div class="container">
	<h2>注文履歴一覧</h2>
	  <table class="table-bordered">
	  <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><% order.order_items.each do |order_item| %>
          <%= order_item.item.item_name %>
        <% end %>
        </td>
        <td><%= order.total_fee %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "注文詳細", public_order_path(order) %></td>
      </tr>
    <% end %>
    </table>
	</table>
</div>