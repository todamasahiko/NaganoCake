<div class="container takasa">
  <h1>注文履歴一覧</h1>

	  <table class="table">
	  <tr>
        <th>購入日時</th>
        <th>購入者</th>

        <th>注文ステータス</th>
        <th></th>
      </tr>
      <% @order.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.member.last_name %></td>

        <td><%= order.order_status %></td>
        <td><%= link_to "注文詳細", admin_order_path(order), class:"btn btn-primary" %></td>
      </tr>
    <% end %>
    </table>
    <%= paginate @order %>
</div>