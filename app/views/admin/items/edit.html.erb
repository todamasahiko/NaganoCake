<div class="container takasa">

  <h2 style="background-color: mediumseagreen; width: 200px; text-align: center; color: white;">商品編集</h2>

  <%= form_for @item,url: {action: "update"} do |f| %>
  <!-- 画像選択欄 -->
  <div class="row">
    <div class="col-xs-4">
      <%= attachment_image_tag @item, :image, size: "300x300",  fallback: "no_image.jpg"%><br>
      <label class="control-label">Image</label>
      <%= f.attachment_field :image %>
    </div>
    <!-- 商品登録フォーム -->
    <div class="col-xs-8">
      <h4 style="margin-bottom: 30px;">
        <%= f.label :"商品名" ,class: "col-xs-3" %>
        <%= f.text_field :item_name, class: "col-xs-8 " %><br>
      </h4>
      <h4>
        <%= f.label :"商品説明" ,class: "col-xs-3"%>
        <%= f.text_area :explanation,size: "5x10", class: "col-xs-8",style:"margin-bottom:30px;" %><br>
      </h4>
      <h4 style="margin-bottom: 30px;">
        <%= f.label :"ジャンル" ,class: "col-xs-3"%>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %> 
        <!-- f.collection_select(プロパティ名, オブジェクトの配列, value属性の項目, 表示テキストの項目) -->
        <!-- Genre.allでジャンルのテーブル内情報を持ってきてる -->
      </h4>
      <h4 style="margin-bottom: 30px;">
        <%= f.label :"税別価格" ,class: "col-xs-3"%>
        <%= f.text_field :unit_price_without_tax, class: "col-xs-5"%>円<br>
      </h4>
        <h4 style="margin-bottom: 30px;">
          <%= f.label :"販売ステータス" ,class: "col-xs-3" %>
          <%= f.select :sale_status,["販売中","販売停止"] ,class: "col-xs-8"%>
        </h4>
        <%= f.submit :変更を保存, class: "btn btn-primary col-xs-3",style: "margin-left:70%;" %>
      </h4>
      <% end %>
    </div>
  </div>
</div>
