<div class="container takasa tect-center">
  <div class="row">

    <h2>会員一覧</h2>
  </div>

  <div class="col-xs-10 member-index">
    <!-- ジャンル一覧 -->
    <table class = "table table-hover">
      <thead>
        <tr class="active">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td><%= link_to admin_member_path(member) do %><%= member.last_name %><%= member.first_name %><% end %></td>
          <td><%= member.email %></td>
          <td><%= member.withdrawal_status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @members %>
  </div>


</div>
