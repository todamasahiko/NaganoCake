<div class="container" style="height:1500px;">
<h1><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h1>


	  <table class="table">
	  <tr>
        <th style="width: 300px;">顧客ID</th>
        <td><%= @member.id %> 
          <% if @member.withdrawal_status == "有効" %>

          <div class="btn btn-primary">有効会員</div>

          <% else %>

          <div class="btn btn-danger">退会済み</div>

          <% end %>

        </td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @member.last_name %><%= @member.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @member.last_name_kana %><%= @member.last_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @member.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @member.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
          <td><%= @member.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @member.email %></td>
      </tr>
    </table>
    
    <%= link_to "編集する", edit_admin_member_path(@member), class:"btn btn-primary" %>
    <%= link_to "注文履歴一覧", admin_orders_path(@member.id), class:"btn btn-primary" %>
  
  </div>